<div class="nested-fields project-tag-fields">
  <div class="form-inline">
    <div class="tag_from_list" style="display: inline;">
      <%= f.association :tag, collection: Tag.order(:name), prompt: 'Choose an existing tag', label: false %>
    </div>
    <%= link_to_add_association 'or create a new tag', f, :tag, class: 'add-tag' %>
    <%= link_to_remove_association f, class: 'remove-tag btn btn-default btn-xs' do %>
      <div class="glyphicon glyphicon-remove"></div>
    <% end %>
  </div>
</div>
