<div class="col-sm-6">
  <div class="card h-100">
    <h3 class="card-header">Enfant #<%= index %></h3>
    <div class="card-body">
      <div class="form-group string optional disabled enfant_nom">
        <label class="control-label string optional disabled" for="enfant_nom">Nom</label>
        <input id="enfant_nom" class="form-control string optional disabled" disabled="disabled" value="<%= enfant.nom %>" type="text">
      </div>
      <div class="form-group string optional disabled enfant_prenom">
        <label class="control-label string optional disabled" for="enfant_prenom">Prenom</label>
        <input id="enfant_prenom" class="form-control string optional disabled" disabled="disabled" value="<%= enfant.prenom %>" type="text">
      </div>
      <div class="form-group string optional disabled enfant_dateNaissance">
        <label class="control-label string optional disabled" for="enfant_dateNaissance">Date de
          naissance</label>
        <input id="enfant_dateNaissance" class="form-control string optional disabled" disabled="disabled" value="<%= enfant.dateNaissance.to_date %>" type="text">
      </div>
      <div class="form-group string optional disabled enfant_lien">
        <label class="control-label string optional disabled" for="enfant_lien">Lien</label>
        <input id="enfant_lien" class="form-control string optional disabled" disabled="disabled" value="<%= collection.first.lien %>" type="text">
      </div>
    </div>
  </div>
</div>