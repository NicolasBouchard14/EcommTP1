<div class="nested-fields">
  <%= f.input :secteurEtudes, label:  'Secteur' %>
  <%= f.input :niveau, label:  'Niveau' %>
  <%= f.input :dateDebut, label:  'Date début' %>
  <%= f.input :dateDebut, label:  'Date complétion' %>
  <h3>Institution:</h3>
  <div id="infoInstitution">
    <%= f.simple_fields_for :institution_attributes do |frmInst| %>
      <%= frmInst.input :nom, label: 'Nom' %>
      <h4>Adresse institution:</h4>
      <div id="infoInstitutionAdresse">
        <%= f.simple_fields_for :addresse_attributes do |frmInstAdresse| %>
          <%= frmInstAdresse.input :numeroCivique, label: 'Numéro civique' %>
          <%= frmInstAdresse.input :rue, label: 'Rue' %>
          <%= frmInstAdresse.input :codePostal, label: 'Code postal' %>
          <%= frmInstAdresse.input :ville, label: 'Ville' %>
          <%= frmInstAdresse.input :province, label: 'Province' %>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to_remove_association "Enlever cette étude", f %>
</div>
